import java.util.Scanner;
public class factorial {
    public static void main(String[] args) {
        int n, total = 1;
        Scanner input = new Scanner(System.in);

        System.out.println("Enter a number : ");
        n = input.nextInt();

        for ( int i= 1; i <= n; i++){
            total = total * i;
        }
        System.out.println( "factorial of \t" + n + " : " + total );
    }
}
